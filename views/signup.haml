%h1 Sign up!
.row
  .col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
    %form{ action: "/signup", method: "post" }
      - if flash[:error]
        #error_explanation
          .alert.alert-danger
            The form contains errors.
          %ul
            - flash[:error].full_messages.each do |msg|
              %li #{ msg }
      %div
        %label{ for: "name" } Username
        %input#username{ type: "text", name: "name" }
      %div
        %label{ for: "email" } Email
        %input#email{ type: "text", name: "email" }
      %div
        %label{ for: "password" } Password
        %input#password{ type: "password", name: "password" }
      %div
        %label{ for: "password_confirmation" } Confirmation
        %input#confirmation{ type: "password", name: "password_confirmation" }
      %div
        %input{ type: "submit", value: "Create my account", class: "btn btn-large btn-primary" }
